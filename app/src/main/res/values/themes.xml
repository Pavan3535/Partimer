        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="Theme.Partimer" parent="Base.Theme.Partimer" />

    <style name="ShapeAppearanceOverlayExtended" parent="">
